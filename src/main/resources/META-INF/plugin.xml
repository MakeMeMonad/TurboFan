<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.makememonad.turbofan</id>
    <name>TurboFan</name>
    <vendor>makememonad</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.makememonad.turbofan.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.makememonad.turbofan.startup.MyProjectActivity" />
        <fileType
                name="Swift File"
                implementationClass="com.makememonad.turbofan.language.swift.SwiftFileType"
                fieldName="INSTANCE"
                language="swift"
                extensions="swift;swiftinterface"
                fileNames="Package.swift"
                fileNamesCaseInsensitive="Package.swift;Package.Resolved"
                patterns="*.swift;*.swiftinterface"
                hashBangs=""
        />
        <lang.parserDefinition language="swift" implementationClass="com.makememonad.turbofan.language.swift.SwiftParserDefinition"/>
        <colorSettingsPage implementation="com.makememonad.turbofan.language.swift.SwiftColorSettingsPage"/>
        <lang.syntaxHighlighterFactory
                language="swift"
                implementationClass="com.makememonad.turbofan.language.swift.SwiftSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="com.makememonad.turbofan.language.swift.SwiftColorSettingsPage"/>
    </extensions>
</idea-plugin>